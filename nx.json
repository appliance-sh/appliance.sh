{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/packages/sdk/dist"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true
    },
    "release": {
      "dependsOn": ["^release"]
    },
    "postbuild": {
      "dependsOn": ["^postbuild"]
    }
  },
  "release": {
    "version": {
      "conventionalCommits": true
    },
    "groups": {
      "packages": {
        "projects": ["sdk", "cli", "install-aws", "api-server"],
        "projectsRelationship": "fixed",
        "changelog": {
          "workspaceChangelog": {
            "createRelease": "github"
          }
        }
      }
    }
  }
}
